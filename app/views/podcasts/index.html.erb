<% 
  @title = "Seja bem vindo" 
  @keywords = "Podcasts Ruby on Rails Brasil"
  @description = "Série de podcasts sobre Ruby on Rails e sobre as principais novidades na área de tecnologia da informação" 
  @last_updated = '22/05/2008'
%>

<%- @podcasts.each do |podcast|%>
	<div class="sub">
		<h1>#<%=h podcast.number%><br /><span><%=podcast.recording_date%></span></h1>
	</div>
	<div class="main">
	  <p>
	    <%= BlueCloth.new(h(podcast.description)).to_html %>
    	<%= link_to "Mais detalhes", podcast_permalink_path(podcast.permalink)%>
	  </p>
	</div>
	<div class="clearall">&nbsp;</div>
<% end %>
